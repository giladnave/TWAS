<h1>Listing bids</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Joiners required</th>
    <th>Joiners count</th>
    <th>Valid until</th>
    <th>Bid owner</th>
    <th>Join Link</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bids.each do |bid| %>
  <tr>
    <td><%= bid.title %></td>
    <td><%= bid.content %></td>
    <td><%= bid.join_num %></td>
    <td><%= bid.joinerships.count %></td>
    <td><%= bid.valid_until %></td>
    <td><%= bid.user.email %></td>
    <%#= link_to 'Join', join_bid_path(bid) %></td>
    <td><%= link_to 'Join', joinerships_path(:bid_id => bid), :method => :post %>
    
    <td><%= link_to 'Show', bid %></td>
    <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
    <td><%= link_to 'Destroy', bid, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

