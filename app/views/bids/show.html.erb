<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @bid.title %>
</p>

<p>
  <b>Owner:</b>
  <%= @bid.user.email %>
</p>

<p>
  <b>Content:</b>
  <%= @bid.content %>
</p>

<p>
  <b>Joiners required:</b>
  <%= @bid.join_num %>
</p>

<p>
  <b>Joiners count:</b>
  <%= @bid.joinerships.count %>
</p>

<p>
  <b>Valid until:</b>
  <%= @bid.valid_until %>
</p>

<p>
  <b>Link to Join:</b>
  <%#= link_to 'Join Me', joinerships_path(:bid_id => @bid), :method => :post %>
  <%= link_to 'Join Me', join_bid_path(@bid) %>
</p>

<p>
<b>Joiners</b>
<ul>
  <% for joiner in @bid.joiners %>
    <li>
      <%=h joiner.email %>
    </li>
  <% end %>
</ul>
</p>

<%= link_to 'Edit', edit_bid_path(@bid) %> |
<%= link_to 'Back', bids_path %>
